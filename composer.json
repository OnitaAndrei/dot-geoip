{
    "name": "dotkernel/dot-geoip",
    "description": "DotKernel component based on Maxmind's geoip2/geoip2 package, using their free GeoLite2 databases to provide geographical details about an IP address.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "geoip",
        "dotkernel",
        "laminas",
        "mezzio"
    ],
    "authors": [
        {
            "name": "DotKernel Team",
            "email": "team@dotkernel.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "dotkernel/dot-cli": "^3.2",
        "geoip2/geoip2": "^2.12.2",
        "guzzlehttp/guzzle": "^7.4.2",
        "laminas/laminas-filter": "^2.14",
        "psr/container": "^1.1.2",
        "symfony/filesystem": "^5.4.7"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^5.13"
    },
    "autoload": {
        "psr-4": {
            "Dot\\GeoIP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DotTest\\GeoIP\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "static-analysis": "psalm --shepherd --stats"
    }
}
